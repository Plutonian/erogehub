<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.TextArea?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.BorderPane?>
<?import javafx.scene.text.Font?>
<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.goexp.galgame.gui.view.game.detailview.inner.HeaderPartController">
    <stylesheets>
        <URL value="@/view/view.css"/>
    </stylesheets>
    <left>
        <ImageView fx:id="imageImg" pickOnBounds="true" preserveRatio="true"/>
    </left>
    <center>
        <TextArea fx:id="txtStory" prefHeight="600.0" style="-fx-margin-top:10px;-fx-background-color: #eee;"
                  wrapText="true">
            <font>
                <Font size="16.0"/>
            </font>
            <BorderPane.margin>
                <Insets left="10"/>
            </BorderPane.margin>
        </TextArea>
    </center>

    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
</BorderPane>
