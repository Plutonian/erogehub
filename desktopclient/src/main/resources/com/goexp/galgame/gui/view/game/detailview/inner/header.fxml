<?xml version="1.0" encoding="UTF-8"?>

<?import java.net.*?>
<?import javafx.geometry.*?>
<?import javafx.scene.control.*?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.*?>

<BorderPane xmlns="http://javafx.com/javafx/10.0.2-internal" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.goexp.galgame.gui.view.game.detailview.inner.HeaderPartController">
    <stylesheets>
        <URL value="@/view/view.css"/>
    </stylesheets>
    <left>
        <AnchorPane BorderPane.alignment="CENTER">
            <ImageView fx:id="imageImg" pickOnBounds="true" preserveRatio="true" AnchorPane.bottomAnchor="0.0"
                       AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
            </ImageView>
        </AnchorPane>
    </left>
    <center>
        <VBox fx:id="right" spacing="5.0">
            <BorderPane.margin>
                <Insets left="10"/>
            </BorderPane.margin>
            <Pane>
                <children>
                    <HBox>
                        <Label text="原画" textFill="#6e6d6d">
                            <font>
                                <Font size="14.0"/>
                            </font>
                        </Label>
                        <FlowPane fx:id="flowPainter"/>
                    </HBox>
                    <HBox layoutY="26.0">
                        <Label text="シナリオ" textFill="#6e6d6d">
                            <font>
                                <Font name="System Bold" size="14.0"/>
                            </font>
                        </Label>
                        <Label fx:id="txtWriter" text="XX" wrapText="true"/>
                    </HBox>
                </children>
            </Pane>
            <TitledPane expanded="false" text="Intro">
                <content>

                    <Text fx:id="txtIntro" fill="grey"/>
                </content>
                <VBox.margin>
                    <Insets/>
                </VBox.margin>
            </TitledPane>
            <TextArea fx:id="txtStory" prefHeight="520.0" style="-fx-margin-top:10px;-fx-background-color: #eee;"
                      wrapText="true">
                <font>
                    <Font size="16.0"/>
                </font>
            </TextArea>
        </VBox>
    </center>

    <padding>
        <Insets bottom="5.0" left="5.0" right="5.0" top="5.0"/>
    </padding>
</BorderPane>
