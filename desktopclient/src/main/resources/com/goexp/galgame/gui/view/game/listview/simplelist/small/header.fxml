<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.goexp.galgame.gui.view.game.listview.simplelist.small.HeaderController">
    <stylesheets>
        <URL value="@/view/view.css"/>
    </stylesheets>
    <left>
        <HBox spacing="5">
            <fx:include fx:id="dateview" source="../../../detailview/part/dateshow.fxml"/>
            <ImageView fx:id="imageImg" pickOnBounds="true"/>
        </HBox>
    </left>

    <center>
        <BorderPane>
            <BorderPane.margin>
                <Insets left="10.0"/>
            </BorderPane.margin>
            <center>
                <fx:include fx:id="info" source="info.fxml"/>
            </center>
            <right>
                <HBox StackPane.alignment="TOP_RIGHT">
                    <Label fx:id="lbLoc"/>
                    <fx:include fx:id="changeState" source="../../../part/statechange.fxml"/>
                </HBox>
            </right>
            <bottom>

            </bottom>
        </BorderPane>

    </center>

    <padding>
        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
    </padding>

</BorderPane>
