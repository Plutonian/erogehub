<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.*?>
<?import java.net.URL?>
<TableView xmlns:fx="http://javafx.com/fxml/1" fx:id="table" styleClass="left-pill" tableMenuButtonVisible="true"
           xmlns="http://javafx.com/javafx/"
           nodeOrientation="LEFT_TO_RIGHT"
           fx:controller="com.goexp.galgame.gui.view.game.listview.tableview.TableController">
    <stylesheets>
        <URL value="@/view/view.css"/>
    </stylesheets>
    <columns>
        <TableColumn fx:id="tableColDate" minWidth="-1.0" prefWidth="65.0" resizable="false" sortType="DESCENDING"
                     text="Date"/>
        <TableColumn fx:id="tableColStar" prefWidth="100.0" resizable="false" sortType="DESCENDING" text="Star"/>
        <TableColumn fx:id="tableColBrand" prefWidth="150.0" text="Brand"/>
        <TableColumn fx:id="tableColTitle" prefWidth="600.0" text="Title"/>
        <TableColumn fx:id="tableColType" prefWidth="124.0" text="Type" visible="false"/>
        <TableColumn fx:id="tableColPainter" prefWidth="200.0" text="原画" visible="false"/>
        <TableColumn fx:id="tableColWriter" prefWidth="191.0" text="シナリオ" visible="false"/>
        <TableColumn fx:id="tableColState" prefWidth="100.0" resizable="false" sortType="DESCENDING" text="State"/>
        <TableColumn fx:id="tableColLocation" prefWidth="100.0" sortType="DESCENDING" text="Location"/>
    </columns>
    <contextMenu>
        <ContextMenu>
            <items>
                <Menu fx:id="menuState" mnemonicParsing="false" text="State"/>
                <Menu fx:id="menuLocation" mnemonicParsing="false" text="Location">
                </Menu>
            </items>
        </ContextMenu>
    </contextMenu>
</TableView>