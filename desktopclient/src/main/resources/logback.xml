<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <appender name="debug" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d{HH:mm:ss} [%thread] %-5level %logger{36} ---- %msg%n</Pattern>
        </layout>
    </appender>
    <appender name="info" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%msg%n</Pattern>
        </layout>
    </appender>

    <!--<logger name="com.goexp" level="info"/>-->

    <logger name="ch.qos.logback" level="OFF"/>
    <logger name="com.mchange.v2.log" level="OFF"/>
    <logger name="com.goexp.galgame.gui" level="info">
        <!--<appender-ref ref="info"/>-->
    </logger>
    <!--<logger name="com.goexp.galgame.gui.db" level="info"/>-->
    <!--<logger name="com.goexp.galgame.data.query" level="info"/>-->


    <root level="info">
        <appender-ref ref="info"/>
    </root>
</configuration>