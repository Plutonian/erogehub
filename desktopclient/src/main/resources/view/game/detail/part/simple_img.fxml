<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.ListView?>
<?import javafx.scene.effect.DropShadow?>
<?import javafx.scene.image.*?>
<?import javafx.scene.layout.*?>
<BorderPane xmlns:fx="http://javafx.com/fxml/1" xmlns="http://javafx.com/javafx/"
            fx:controller="com.goexp.galgame.gui.view.game.detailview.ContentViewController$SimpleImgPartController">
    <center>
        <StackPane>
            <children>
                <ImageView fx:id="largeSimple" pickOnBounds="true" preserveRatio="true" StackPane.alignment="CENTER">
                    <effect>
                        <DropShadow offsetX="3.0" offsetY="3.0"/>
                    </effect>
                </ImageView>
                <Hyperlink fx:id="btnPrve" onAction="#btnPrev_OnAction"
                           style="-fx-background-color: #00000010;" StackPane.alignment="CENTER_LEFT">
                    <graphic>
                        <ImageView pickOnBounds="true" preserveRatio="true" rotate="270.0">
                            <image>
                                <Image url="@../../../../img/up.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <StackPane.margin>
                        <Insets left="150.0"/>
                    </StackPane.margin>
                </Hyperlink>
                <Hyperlink fx:id="btnNext" onAction="#btnNext_OnAction"
                           style="-fx-background-color: #00000010;" StackPane.alignment="CENTER_RIGHT">
                    <graphic>
                        <ImageView pickOnBounds="true" preserveRatio="true" rotate="90.0">
                            <image>
                                <Image url="@../../../../img/up.png"/>
                            </image>
                        </ImageView>
                    </graphic>
                    <StackPane.margin>
                        <Insets right="150.0"/>
                    </StackPane.margin>
                </Hyperlink>
            </children>
        </StackPane>
    </center>
    <bottom>
        <ListView fx:id="listSmallSimple" orientation="HORIZONTAL" prefHeight="120" BorderPane.alignment="CENTER"/>
    </bottom>
</BorderPane>
