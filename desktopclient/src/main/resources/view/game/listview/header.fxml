<?import javafx.scene.text.Text?>

<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.goexp.galgame.gui.view.game.listview.simplelist.HeaderController">
    <stylesheets>
        <URL value="@../../view.css" />
    </stylesheets>
    <center>
        <BorderPane>
            <center>
                <BorderPane>
                    <BorderPane.margin>
                        <Insets left="10.0" />
                    </BorderPane.margin>
                    <center>
                        <VBox spacing="5.0">
                            <children>
                        <VBox>
                           <children>
                              <VBox>
                                 <children>
                                            <HBox>
                                                <children>
                                                    <Text fx:id="txtName" strokeType="OUTSIDE" strokeWidth="0.0" text="OH!!マイクロマン">
                                                        <font>
                                                            <Font name="System Bold" size="24.0" />
                                                        </font>
                                                    </Text>
                                                    <Text fx:id="txtSubName" strokeType="OUTSIDE" strokeWidth="0.0" text="～小さくなって女の子の色んなトコロに入っちゃお～" />
                                                </children>
                                            </HBox>
                                 </children>
                              </VBox>
                              <AnchorPane>
                                 <children>
                                            <fx:include fx:id="brandJump" source="../../brand/brandjump.fxml" />
                                 </children>
                                 <VBox.margin>
                                    <Insets left="-5.0" />
                                 </VBox.margin>
                              </AnchorPane>
                           </children>
                        </VBox>
                                <GridPane hgap="3.0" style="-fx-background-color: #ddd;" vgap="3.0">
                                    <columnConstraints>
                                        <ColumnConstraints hgrow="NEVER" maxWidth="65.0" minWidth="10.0" prefWidth="51.0" />
                                        <ColumnConstraints hgrow="ALWAYS" maxWidth="600.0" minWidth="10.0" prefWidth="417.0" />
                                    </columnConstraints>
                                    <rowConstraints>
                                        <RowConstraints vgrow="SOMETIMES" />
                                        <RowConstraints fillHeight="false" vgrow="SOMETIMES" />
                                    </rowConstraints>
                                    <children>
                                        <Label text="原画" textFill="#6e6d6d" GridPane.rowIndex="1" GridPane.vgrow="ALWAYS">
                                            <font>
                                                <Font name="System Bold" size="12.0" />
                                            </font>
                                        </Label>
                                        <FlowPane fx:id="flowPainter" rowValignment="TOP" GridPane.columnIndex="1" GridPane.hgrow="NEVER" GridPane.rowIndex="1" GridPane.vgrow="SOMETIMES" />
                                        <Label text="シナリオ" textFill="#6e6d6d">
                                            <font>
                                                <Font name="System Bold" size="12.0" />
                                            </font>
                                        </Label>
                                        <Label fx:id="txtWriter" text="XX" wrapText="true" GridPane.columnIndex="1" />
                                    </children>
                                    <opaqueInsets>
                                        <Insets />
                                    </opaqueInsets>
                           <VBox.margin>
                              <Insets left="10.0" />
                           </VBox.margin>
                                </GridPane>
                                <HBox fx:id="boxStar" />

                                <HBox fx:id="boxTag" spacing="5.0" />

                                <!--<fx:include fx:id="starChange" source="/view/game/detail/game_star_choicebar.fxml" />-->

                            </children>
                        </VBox>
                    </center>
                    <bottom>
                        <VBox alignment="BOTTOM_CENTER" style="-fx-background-color: rgba(200,200,100,0.4);" BorderPane.alignment="CENTER">
                            <children>
                                <Hyperlink fx:id="linkView" text="View" />
                            </children>
                        </VBox>
                    </bottom>
                    <right>
                        <fx:include fx:id="changeState" source="../detail/control/statechange.fxml" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" StackPane.alignment="BOTTOM_LEFT" />
                    </right>
                </BorderPane>
            </center>
            <BorderPane.margin>
                <Insets />
            </BorderPane.margin>
            <left>
                <AnchorPane prefHeight="180.0" prefWidth="120.0" BorderPane.alignment="CENTER">
                    <children>
                        <ImageView fx:id="imageImg" pickOnBounds="true" preserveRatio="true" AnchorPane.bottomAnchor="0.0" AnchorPane.leftAnchor="0.0" AnchorPane.rightAnchor="0.0" AnchorPane.topAnchor="0.0">
                            <image>
                                <Image url="@../../../../../../../../gal_data/img/game/3369/game_s.jpg" />
                            </image>
                        </ImageView>
                    </children>
                    <BorderPane.margin>
                        <Insets />
                    </BorderPane.margin>
                </AnchorPane>
            </left>
        </BorderPane>
    </center>
    <padding>
        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0" />
    </padding>
    <left>
        <StackPane BorderPane.alignment="CENTER">
            <children>
                <fx:include fx:id="dateview" source="../detail/control/date.fxml" AnchorPane.leftAnchor="0.0" AnchorPane.topAnchor="0.0" BorderPane.alignment="TOP_CENTER" StackPane.alignment="TOP_LEFT" />
                <!--<fx:include fx:id="webjump" source="../../jump/websitejump.fxml" StackPane.alignment="BOTTOM_CENTER" />-->
            </children>
            <padding>
                <Insets left="3.0" right="3.0" />
            </padding>
        </StackPane>
    </left>
</BorderPane>
