<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.*?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<ScrollPane xmlns:fx="http://javafx.com/fxml/1" fx:id="rootContainer" fitToWidth="true" hbarPolicy="NEVER"
            xmlns="http://javafx.com/javafx/"
            fx:controller="com.goexp.galgame.gui.view.detailview.FullContentViewController">
    <stylesheets>
        <URL value="@../../view.css"/>
    </stylesheets>
    <content>
        <VBox spacing="5.0">
            <children>
                <fx:include fx:id="header" source="detail_header.fxml"/>
                <TitledPane fx:id="introPanel" collapsible="false" text="Intro">
                    <content>
                        <VBox>
                            <children>
                                <Text fx:id="txtIntro" fill="#3c3c3c" strokeType="OUTSIDE" strokeWidth="0.0" text="Text"
                                      wrappingWidth="800.0">
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                </Text>
                            </children>
                        </VBox>
                    </content>
                </TitledPane>
                <TitledPane animated="false" collapsible="false" text="ストーリー">
                    <content>
                        <VBox>
                            <children>
                                <Text fx:id="txtStory" fill="#3c3c3c" strokeType="OUTSIDE" strokeWidth="0.0" text="Text"
                                      wrappingWidth="800.0">
                                    <font>
                                        <Font size="14.0"/>
                                    </font>
                                </Text>
                            </children>
                        </VBox>
                    </content>
                </TitledPane>
                <TitledPane animated="false" collapsible="false" text="キャラクター">
                    <VBox.margin>
                        <Insets top="20.0"/>
                    </VBox.margin>
                    <content>
                        <VBox fx:id="listChar" spacing="10.0"/>
                    </content>
                </TitledPane>
                <TitledPane collapsible="false" text="サンプル画像">
                    <content>
                        <fx:include fx:id="simpleImg" source="detail_simple_img.fxml"/>
                    </content>
                </TitledPane>
            </children>
            <padding>
                <Insets bottom="10.0" left="10.0" right="10.0" top="10.0"/>
            </padding>
        </VBox>
    </content>
</ScrollPane>
