<?xml version="1.0" encoding="UTF-8"?>


<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.goexp.galgame.gui.view.game.listview.imglist.CellController">
    <center>
        <VBox spacing="5">
            <StackPane>
                <ImageView fx:id="imageImg" preserveRatio="true"/>
                <AnchorPane maxHeight="-Infinity" prefHeight="20.0" style="-fx-background-color: #00000050;"
                            StackPane.alignment="TOP_CENTER">
                    <padding>
                        <Insets bottom="3.0" top="3.0"/>
                    </padding>
                    <Label fx:id="lbDate" text="2001-5-6" textFill="WHITE" AnchorPane.rightAnchor="10.0"
                           AnchorPane.topAnchor="0.0">
                        <font>
                            <Font size="14.0"/>
                        </font>
                    </Label>
                </AnchorPane>
                <HBox fx:id="boxStar" maxHeight="-Infinity" prefHeight="30" StackPane.alignment="BOTTOM_RIGHT"/>
            </StackPane>
            <VBox spacing="3">
                <Text fx:id="txtName" wrappingWidth="280.0">
                    <font>
                        <Font size="18.0"/>
                    </font>
                </Text>
                <Text fx:id="txtSubName" wrappingWidth="280.0" fill="#666">
                </Text>
                <Label fx:id="lbBrand" text="Brand"/>
                <FlowPane fx:id="flowTag" prefWrapLength="200.0"/>
            </VBox>
        </VBox>
    </center>
    <bottom>
        <AnchorPane BorderPane.alignment="CENTER">
            <fx:include fx:id="changeState" source="../../part/statechange.fxml"/>
            <Hyperlink text="View" AnchorPane.bottomAnchor="0.0" onMousePressed="#onClick"

                       AnchorPane.rightAnchor="10.0"/>
        </AnchorPane>
    </bottom>
</BorderPane>
