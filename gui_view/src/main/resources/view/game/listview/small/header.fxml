<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.geometry.Insets?>
<?import javafx.scene.control.Hyperlink?>
<?import javafx.scene.image.ImageView?>
<?import javafx.scene.layout.*?>
<?import javafx.scene.text.Font?>
<?import javafx.scene.text.Text?>
<?import java.net.URL?>
<BorderPane xmlns="http://javafx.com/javafx/11.0.1" xmlns:fx="http://javafx.com/fxml/1"
            fx:controller="com.goexp.galgame.gui.view.game.listview.simplelist.small.HeaderController">
    <stylesheets>
        <URL value="@../../../view.css"/>
    </stylesheets>
    <left>
        <HBox>
            <fx:include fx:id="dateview" source="../../detail/control/date.fxml"/>
            <ImageView fx:id="imageImg" pickOnBounds="true"/>
        </HBox>
    </left>

    <center>
        <BorderPane>
            <BorderPane.margin>
                <Insets left="10.0"/>
            </BorderPane.margin>
            <center>
                <VBox spacing="3.0">
                    <HBox>
                        <Text fx:id="txtName" strokeType="OUTSIDE" strokeWidth="0.0"
                              text="OH!!マイクロマン">
                            <font>
                                <Font name="System Bold" size="24.0"/>
                            </font>
                        </Text>
                        <Text fx:id="txtSubName" strokeType="OUTSIDE" strokeWidth="0.0"
                              text="～小さくなって女の子の色んなトコロに入っちゃお～"/>
                    </HBox>
                    <fx:include fx:id="brandJump" source="../../../brand/brandjump.fxml"/>

                    <HBox fx:id="boxStar"/>

                    <HBox fx:id="boxTag" spacing="5.0"/>

                    <!--<fx:include fx:id="starChange" source="/view/game/detail/game_star_choicebar.fxml" />-->
                </VBox>
            </center>
            <right>

                <fx:include fx:id="changeState" source="../../detail/control/statechange.fxml"
                            StackPane.alignment="BOTTOM_RIGHT"/>
            </right>
            <bottom>
                <StackPane style="-fx-background-color: rgba(200,200,100,0.4);" alignment="BOTTOM_CENTER"
                           BorderPane.alignment="CENTER">
                    <Hyperlink fx:id="linkView" text="View"/>
                </StackPane>
            </bottom>
        </BorderPane>

    </center>

    <padding>
        <Insets bottom="3.0" left="3.0" right="3.0" top="3.0"/>
    </padding>

</BorderPane>
