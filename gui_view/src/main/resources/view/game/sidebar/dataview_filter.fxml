<?xml version="1.0" encoding="UTF-8"?>

<?import javafx.scene.control.Button?>
<?import javafx.scene.control.Label?>
<?import javafx.scene.control.TitledPane?>
<?import javafx.scene.layout.FlowPane?>
<?import javafx.scene.layout.HBox?>
<?import javafx.scene.layout.StackPane?>

<?import java.net.URL?>
<TitledPane styleClass="copyablelabel" animated="false" expanded="false" text="Filter" xmlns="http://javafx.com/javafx/8.0.999-ea" xmlns:fx="http://javafx.com/fxml/1" fx:controller="com.goexp.galgame.gui.view.game.listview.sidebar.FilterPanelController">
    <stylesheets>
        <URL value="@../../view.css"/>
    </stylesheets>
    <content>
        <StackPane>
            <children>
            <FlowPane hgap="50.0">
               <children>
                  <HBox spacing="5.0">
                     <children>
                              <Label text="Star" />
                        <HBox fx:id="starbox" spacing="5.0" />
                     </children>
                  </HBox>
                  <HBox spacing="5.0">
                     <children>
                              <Label text="State" />
                        <HBox fx:id="statebox" spacing="5.0" />
                     </children>
                  </HBox>
               </children>
            </FlowPane>
                <Button mnemonicParsing="false" onAction="#SetFilter_OnAction" text="OK" StackPane.alignment="BOTTOM_RIGHT" />
            </children>
        </StackPane>
    </content>
</TitledPane>
