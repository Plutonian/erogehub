<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Stop output INFO at start -->
    <statusListener class="ch.qos.logback.core.status.NopStatusListener" />
    <appender name="detail" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%d{HH:mm:ss} [%thread] %-5level %logger{36} ---- %msg%n</Pattern>
        </layout>
    </appender>
    <appender name="sample" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%msg%n</Pattern>
        </layout>
    </appender>

    <logger name="org.mongodb" level="OFF"/>
    <logger name="com.goexp.galgame.data.task.piplline" level="error"/>
<!--    <logger name="com.goexp.galgame.data.task" level="debug"/>-->
    <logger name="com.goexp.galgame.data.task.handler.game.ProcessGameOK" level="OFF"/>
    <logger name="com.goexp.galgame.data.task.handler.PreProcessGame" level="OFF"/>


    <root level="info">
        <appender-ref ref="detail"/>
    </root>
</configuration>