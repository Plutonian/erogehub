<?xml version="1.0" encoding="UTF-8"?>
<configuration>

    <!-- Stop output INFO at start -->
    <statusListener class="ch.qos.logback.core.status.NopStatusListener"/>
    <appender name="debug" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%magenta(%d{HH:mm:ss}) [%thread %gray(%logger{36}):%M] %cyan(%-5level) %msg%n</Pattern>
        </layout>
    </appender>
    <appender name="sample" class="ch.qos.logback.core.ConsoleAppender">
        <layout class="ch.qos.logback.classic.PatternLayout">
            <Pattern>%magenta(%d{HH:mm:ss}) %cyan(%-5level) %msg%n</Pattern>
        </layout>
    </appender>

    <logger name="org.mongodb" level="OFF"/>
    <logger name="com.goexp.galgame.data.piplline" level="error"/>
    <logger name="com.goexp.galgame.data.db" level="error"/>
    <logger name="com.goexp.galgame.data.parser" level="error"/>
    <logger name="com.goexp.galgame.data.source.erogamescape.task.game.GetGameBasic" level="debug"/>
    <!--    <logger name="com.goexp.galgame.data.task.handler.PreProcessGame" level="OFF"/>-->
    <!--    <logger name="com.goexp.galgame.data.task.FromDateRangeTask" level="debug"/>-->


    <root level="info">
        <appender-ref ref="sample"/>
    </root>
</configuration>